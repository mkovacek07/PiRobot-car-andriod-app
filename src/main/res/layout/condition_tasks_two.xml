<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/gradient_background"
    tools:context="com.example.mateo.pirobotcar.LearnFolder.Tasks.ConditionTaskTwo">

    <EditText
        android:id="@+id/distance"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="256dp"
        android:layout_marginTop="228dp"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=" Distance: "
        android:textColor="#404040"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="256dp" />

    <Button
        android:id="@+id/forward"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="#ffffff"
        android:padding="10dp"
        android:text="Forward"
        android:textColor="#404040"
        android:textSize="10sp"
        app:layout_constraintHorizontal_bias="0.161"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/delay"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:padding="10dp"
        android:text="Delay"
        android:textColor="#404040"
        android:textSize="10sp"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forward" />

    <Button
        android:id="@+id/forward2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="#ffffff"
        android:padding="10dp"
        android:text="Forward"
        android:textColor="#404040"
        android:textSize="10sp"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/reset"
        android:layout_width="125dp"
        android:layout_height="55dp"
        android:layout_marginEnd="252dp"
        android:layout_marginRight="264dp"
        android:background="#ffffff"
        android:text="RESET"
        android:textColor="#404040"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <Button
        android:id="@+id/backward"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="#ffffff"
        android:padding="10dp"
        android:text="Backward"
        android:textColor="#404040"
        android:textSize="10sp"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <LinearLayout
        android:id="@+id/target"
        android:layout_width="385dp"
        android:layout_height="167dp"
        android:layout_marginTop="288dp"
        android:background="?android:attr/colorPrimaryDark"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="lollipop" />

    <Button
        android:id="@+id/run"
        android:layout_width="125dp"
        android:layout_height="55dp"
        android:background="#ffffff"
        android:text="RUN"
        android:textColor="#404040"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="365dp"
        android:layout_height="66dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="The task is to go twice forward and one time backwards!"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="21sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="164dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="260dp"
        android:text="MAIN"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="21sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</android.support.constraint.ConstraintLayout>